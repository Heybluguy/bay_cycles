<%= form_for @order do |f| %>

  <%= f.label "Your Name" %>
  <%= f.text_field :purchaser_name %>

  <%= f.label "Your Address" %>
  <%= f.text_field :purchaser_address %>

  <%= hidden_field(:user_id, current_user.id) %>
  <%= hidden_field(:status, "Ordered") %>

  <%= f.submit "Submit Order" %>

<% end %>
