Orders with the status of <%= @status_orders.first.status %>
<% @status_orders.each do |order| %>
  <%= order.status %> Order: #<%= order.id %>
  <%= link_to "Cancel Order", order_path(order, status: "Cancelled"), method: "patch" if !@status_orders.paid.empty? || !@status_orders.ordered.empty? %>
  <%= link_to "Mark as Paid", order_path(order, status: "Paid"), method: "patch" if !@status_orders.ordered.empty? %>
  <%= link_to "Mark as Completed", order_path(order, status: "Completed"), method: "patch" if !@status_orders.paid.empty? %>
<% end %>
