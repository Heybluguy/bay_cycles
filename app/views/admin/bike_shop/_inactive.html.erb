<% @inactive_accessories.each do |inactive| %>
  Name: <%= inactive.name %>
  Description: <%= inactive.description %>
  Price: <%= number_to_currency(inactive.price) %>
  <%= link_to "Edit #{inactive.name}", edit_admin_accessory_path(inactive) %>
  Status: Inactive
  <%= link_to "Reactivate Accessory", admin_accessory_path(inactive, :role => 0), method: "put" %>
<% end %>
