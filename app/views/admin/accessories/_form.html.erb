<%= form_for [:admin, @accessory], html: { multipart: true } do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.number_field :price, min: 0 %>

  <%= image_tag @accessory.image.url %>
  <%= f.file_field :image %>

  <%= f.submit %>

<% end %>
